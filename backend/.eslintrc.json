{
  "env": {
    "node": true,
    "browser": true,
    "es6": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "Promise": true,
    "Global": true
  },
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "require-jsdoc": "off",
    "no-console": "warn",
    "new-cap": "off",
    "indent": ["error", 2],
    "camelcase": "off",
    "no-tabs": "off",
    "no-trailing-spaces": "error",
    "no-mixed-spaces-and-tabs": "error",
    "max-len": [
      "error",
      {
        "code": 200
      }
    ],
    "no-useless-escape": "warn",
    "space-infix-ops": "error",
    "eqeqeq": "warn",
    "no-underscore-dangle": "off",
    "no-param-reassign": "off",
    "arrow-body-style": ["error", "as-needed"],
    "no-plusplus": "off",
    "no-await-in-loop": "warn",
    "func-names": ["warn", "never"],
    "no-return-assign": "warn",
    "comma-dangle": [
      "error",
      {
        "functions": "ignore"
      }
    ],
    "no-lonley-if": "off",
    "object-curly-newline": [
      "error",
      {
        "ObjectExpression": "always",
        "ObjectPattern": {
          "multiline": true
        },
        "ImportDeclaration": "never",
        "ExportDeclaration": {
          "multiline": true,
          "minProperties": 3
        }
      }
    ],
    "no-use-before-define": [
      "error",
      {
        "functions": true,
        "classes": true,
        "variables": true
      }
    ],
    "consistent-return": "warn",
    "arrow-parens": "off"
  }
}
